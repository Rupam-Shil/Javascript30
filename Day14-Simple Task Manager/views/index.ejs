<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Document</title>
		<link rel="stylesheet" href="./style.css" />
	</head>
	<body>
		<section>
			<div class="container">
				<div class="top">
					<h1>Quick TODO</h1>
					<button class="addTodo">+ Add Todo</button>
				</div>
				<div class="bottom">
					<ul>
						<% todos.forEach(todo => { %>
						<li>
							<form action="POST">
								<input
									type="checkbox"
									name="isDone"
									value="checked"
									data-id="<%=todo.id%>"
								/>
							</form>
							<p><%=todo.todo%></p>
						</li>
						<%})%>
					</ul>
				</div>
			</div>
			<div class="modal">
				<div class="main">
					<form method="POST" action="/">
						<label for="task">Add Todo</label>
						<input type="text" name="todo" class="task" id="task" />
						<div class="two-btn">
							<button type="submit">Add Task</button>
							<button type="button" class="closeModal">Cancel</button>
						</div>
					</form>
				</div>
			</div>
		</section>
		<script src="./script.js"></script>
	</body>
</html>
